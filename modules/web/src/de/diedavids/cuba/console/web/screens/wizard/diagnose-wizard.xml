<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption"
        class="de.diedavids.cuba.console.web.screens.wizard.DiagnoseWizard"
        messagesPack="de.diedavids.cuba.console.web.screens.wizard">
    <dsContext>
            <datasource id="diagnoseFileValidationDs"
                        class="de.diedavids.cuba.console.wizard.DiagnoseFileValidation"
                        datasourceClass="de.diedavids.cuba.console.web.screens.wizard.DiagnoseFileValidationDatasource"/>

        <datasource id="diagnoseResultsDs"
                    class="de.diedavids.cuba.console.wizard.DiagnoseFileValidation"
                    datasourceClass="de.diedavids.cuba.console.web.screens.wizard.DiagnoseFileValidationDatasource"/>
    </dsContext>
    <actions>
        <action id="executeDiagnosisAction"
                caption="msg://execute"
                icon="icons/run.png"
                invoke="executeDiagnosis"/>
        <action id="cancelWizardAction"
                caption="mainMsg://action.cancel"
                icon="icons/cancel.png"
                invoke="cancelWizard"/>
        <action id="downloadDiagnoseResultsAction"
                caption="msg://downloadResult"
                icon="icons/download.png"
                invoke="downloadDiagnoseResult"/>
    </actions>
    <dialogMode forceDialog="true"
                height="400"
                resizable="true"
                width="600"/>
    <layout expand="wizardAccordion" spacing="true">
        <accordion id="wizardAccordion">
            <tab id="step1"
                 caption="1. Upload Diagnose File"
                 margin="true"
                 spacing="true">
                <buttonsPanel align="TOP_CENTER">
                    <upload id="consoleFileUploadBtn"
                            accept=".zip"
                            dropZone="dropZone"
                            uploadButtonCaption="msg://uploadBtnCaption"
                            uploadButtonDescription="msg://uploadBtnDescription"
                            uploadButtonIcon="icons/upload.png"/>
                </buttonsPanel>
                <vbox id="dropZone"
                      spacing="true"
                      stylename="cuba-static-drop-zone">
                    <label align="MIDDLE_CENTER"
                           stylename="cuba-upload-dropzone-description"
                           value="Drop file here..."/>
                </vbox>

            </tab>
            <tab id="step2"
                 caption="2. Execute Diagnose"
                 enable="true"
                 margin="true"
                 expand="diagnoseFileValidationTable"
                 spacing="true">
                <table id="diagnoseFileValidationTable"
                       width="100%"
                       columnControlVisible="false"
                       showSelection="false"
                       sortable="false"
                       multiselect="false">
                    <columns>
                        <column id="message" />
                    </columns>
                    <rows datasource="diagnoseFileValidationDs"/>
                </table>
                <buttonsPanel align="TOP_RIGHT">
                    <button id="executeDiagnosisBtn"
                            action="executeDiagnosisAction"
                    />
                </buttonsPanel>
            </tab>
            <tab id="step3"
                 caption="3. Diagnose results"
                 enable="true"
                 expand="diagnoseResultsTable"
                 margin="true"
                 spacing="true">

                <table id="diagnoseResultsTable"
                       width="100%"
                       columnControlVisible="false"
                       showSelection="false"
                       sortable="false"
                       multiselect="false">
                    <columns>
                        <column id="message" />
                    </columns>
                    <rows datasource="diagnoseResultsDs" />
                </table>
                <buttonsPanel align="TOP_RIGHT">
                    <button id="downloadDiagnoseResults"
                            action="downloadDiagnoseResultsAction"
                    />
                </buttonsPanel>
            </tab>
        </accordion>
        <buttonsPanel align="TOP_RIGHT">
            <button id="cancelWizard"
                    action="cancelWizardAction"
            />
        </buttonsPanel>
    </layout>
</window>
